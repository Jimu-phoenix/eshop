        <h1>Welcome to Your Favorite E-Shop</h1>
        <p>Discover amazing products at unbeatable prices. Quality you can trust, delivered to your door.</p>
        <div class="hero-actions">
          <% if (user) { %>
            <a href="/shop" class="btn-hero btn-primary">Shop Now</a>
            <p class="welcome-text">Welcome back, <%= user.name %>!</p>
          <% } else { %>
            <a href="/auth" class="btn-hero btn-primary">Get Started</a>
            <a href="#about" class="btn-hero btn-secondary">Browse Products</a>
          <% } %>
        </div>
      </div>
      <div class="hero-image">
        <div class="image">
          <img src="/images/homePage.gif" alt="Shopping">
        </div>
      </div>
    </section>

    <section class="features" id="products">
      <h2>Why Choose Us?</h2>
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon">ðŸšš</div>
